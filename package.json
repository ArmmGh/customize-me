{
	"name": "customize-me",
	"version": "0.0.4",
	"description": "Small lib for customizing custom web components",
	"main": "lib/index.js",
	"module": "lib/index.js",
	"files": [
		"lib/**/*"
	],
	"types": "lib/index.d.ts",
	"author": "Arman Ghazaryan",
	"license": "MIT",
	"scripts": {
		"lint": "eslint ./src ./example",
		"start": "webpack-dev-server --config webpack.dev.js",
		"build": "yarn build:types && yarn build:js",
		"build:types": "tsc --project ./src/tsconfig.json --emitDeclarationOnly",
		"build:js": "./node_modules/.bin/babel src --out-dir lib --extensions \".ts\" --source-maps inline"
	},
	"keywords": [
		"typescript",
		"custom-component",
		"web-component",
		"custom-components",
		"web-components",
		"customize-component"
	],
	"devDependencies": {
		"@babel/cli": "^7.17.10",
		"@babel/core": "^7.17.10",
		"@babel/plugin-proposal-decorators": "^7.17.9",
		"@babel/preset-env": "^7.17.10",
		"@babel/preset-typescript": "^7.16.7",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"babel-loader": "^8.2.5",
		"clean-webpack-plugin": "^4.0.0",
		"core-js": "3",
		"css-loader": "^6.7.1",
		"eslint": "^8.12.0",
		"html-webpack-plugin": "^5.5.0",
		"node-sass": "^7.0.1",
		"sass-loader": "^12.6.0",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.3",
		"webpack": "^5.70.0",
		"webpack-cli": "^4.9.2",
		"webpack-dev-server": "^4.7.4",
		"webpack-merge": "^5.8.0"
	},
	"type": "module"
}
