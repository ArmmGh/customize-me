{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": ["es5", "es6", "dom"],
		"module": "es6",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "../dist",
		"removeComments": true,
		"target": "es6"
	},
	"include": ["./*.ts"]
}
